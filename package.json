{
	"name": "matcha-monorepo",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"packageManager": "pnpm@10.30.2",
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"dev:desktop": "turbo run tauri:dev --filter=@matcha/desktop",
		"build:desktop": "turbo run tauri:build --filter=@matcha/desktop",
		"dev:web": "turbo run dev --filter=@matcha/web",
		"build:web": "turbo run build --filter=@matcha/web",
		"type-check": "turbo run type-check",
		"lint": "biome check ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"turbo": "^2.3.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["esbuild", "@biomejs/biome"]
	}
}
